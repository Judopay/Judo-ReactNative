{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "module": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "__tests__/**/*-test.ts",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
